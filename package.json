		"test:e2e": "vitest --dir tests/e2e"
	},
	"dependencies": {
		"@tauri-apps/api": "^2.2.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/vite": "^4.0.0",
		"@tauri-apps/cli": "^2.2.3",
		"@types/node": "^22.10.7",
		"eslint": "^9.18.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.17.3",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.7.3",
